@model IList<St.Models.Custom.Partner>

<section id="our-partners" class="bg-light mb-3">
    <div class="container pt-5 pb-5">
        <div class="row ">
            <div class="col-12 col-md-6 mx-auto mb-5 text-center">
                <h3 class="pb-3">Наши партнёры</h3>
            </div>
        </div>
        @for (var i = 0; i < @Model.Count; i += 5)
        {
            <div class="row mb-5 pt-3 justify-content-center">
                @if (Model.Count > i)
                {
                    <div class="col-12 col-md-3">
                        <a class="partner-link">@Model[i].Name</a>
                    </div>
                }
                @if (Model.Count > i + 1)
                {
                    <div class="col-12 col-md-3">
                        <a class="partner-link">@Model[i + 1].Name</a>
                    </div>
                }
                @if (Model.Count > i + 2)
                {
                    <div class="col-12 col-md-3">
                        <a class="partner-link">@Model[i + 2].Name</a>
                    </div>
                }
            </div>
            <div class="row mb-5 pt-3 justify-content-center">
                @if (Model.Count > i + 3)
                {
                    <div class="col-12 col-md-3">
                        <a class="partner-link">@Model[i + 3].Name</a>
                    </div>
                }
                @if (Model.Count > i + 4)
                {
                    <div class="col-12 col-md-3">
                        <a class="partner-link">@Model[i + 4].Name</a>
                    </div>
                }
            </div>
        }
    </div>
</section>