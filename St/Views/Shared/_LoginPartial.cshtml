@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav justify-content-end">
        <li class="nav-item">
            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link text-white-70" })
        </li>
        <li class="nav-item">
            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                 @Html.AntiForgeryToken()
                <button type="submit" class="btn navbar-btn navbar-link" role="button">Выйти</button>
            }

        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav justify-content-end">
        <li class="nav-item">
            @Html.ActionLink("Вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link text-white-70" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link text-white-70" })
        </li>
    </ul>
}
